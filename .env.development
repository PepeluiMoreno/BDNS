# BDNS_graphql/.env.development
# Configuracion de desarrollo local

# Entorno
ENVIRONMENT=development
DEBUG=True

# Base de datos PostgreSQL local
DATABASE_URL=postgresql+psycopg2://bdns:bdns@localhost:5433/bdns

# Para asyncpg (si se usa async)
DATABASE_URL_ASYNC=postgresql+asyncpg://bdns:bdns@localhost:5433/bdns

# SQLAlchemy
SQLALCHEMY_ECHO=false
POOL_SIZE=20
POOL_MAX_OVERFLOW=10
POOL_TIMEOUT=30

# Redis (cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API GraphQL
API_HOST=0.0.0.0
API_PORT=8050
API_URL=http://localhost:8050/graphql

# BDNS API externa
BDNS_API_URL=https://www.pap.hacienda.gob.es/bdnstrans/GE/es/api
BDNS_REQUEST_DELAY=2.0
BDNS_PAGE_SIZE=1000

# ETL
ETL_BATCH_SIZE=5000
ETL_MAX_WORKERS=4
ETL_USER=etl_system
